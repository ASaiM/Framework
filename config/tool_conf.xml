<?xml version='1.0' encoding='utf-8'?>
<toolbox>
    <label text="COMMON TOOLS" id="common" />
        <section id="getext" name="Get Data">
            <tool file="data_source/upload.xml" />
        </section>
        <section id="extraction" name="Extract data">
            <tool file="extract/extract_sequence_file/extract_sequence_file.xml" />
            <tool file="extract/extract_similarity_search_report/extract_similarity_search_report.xml" />
        </section>
    <label text="PRETREATMENTS" id="pretreatments" />
        <section id="qualityControl" name="Control quality">
            <tool file="quality_control/prinseq/prinseq.xml" />
        </section>
        <section id="paired_end_assembly" name="Paired-end assembly">
            <tool file="paired_end_assembly/fastq_join/fastq_join.xml" />
        </section>
        <!--<section id="de_novo_assembly" name="De novo assembly">
            <tool file="genometools/readjoiner/readjoiner.xml" />
        </section>-->
        <section id="rna_manipulation" name="RNA manipulation">
            <tool file="rna_manipulation/sortmerna/sortmerna.xml" />
            <tool file="rna_manipulation/reago/reago.xml" />
            <!--<tool file="rna_manipulation/infernal/infernal.xml" />-->
        </section>
        <section id="dereplication" name="Dereplicate">
            <tool file="usearch/derep_prefix/derep_prefix.xml" />
        </section>
        <section id="align-it" name="align-it">
            <tool file="silicos_it/align-it/align-it.xml" />
        </section>
    <label text="TAXONOMIC ASSIGNATION" id="taxonomic" />
        <section id="non_rRNA_taxonomic_assignation" name="For non rRNA sequences">
            <tool file="non_rRNA_taxonomic_assignation/metaphlan2/metaphlan2.xml" />
        </section>
    <label text="FUNCTIONAL ASSIGNATION" id="functional" />
        <section id="metabolic_analysis" name="Metabolic analysis">
            <tool file="metabolic_analysis/humann/humann.xml" />
            <tool file="metabolic_analysis/humann2/humann2.xml" />
            <tool file="metabolic_analysis/humann2/regroup_table/regroup_table.xml" />
            <tool file="metabolic_analysis/humann2/add_group_description/add_group_description.xml" />
            <tool file="metabolic_analysis/humann2/simplify_table/simplify_table.xml" />
        </section>
</toolbox>